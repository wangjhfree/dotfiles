# 系统

cat /proc/version #查看Linux内核
uname -a

cat /etc/*-release #系统版本
lsb_release -a

hostname #主机名
hostnamectl set-hostname zk03-pre

lspci -tv #列出所有PCI设备

lsusb -tv #列出所有USB设备

lsmod #加载内核模块

env #查看环境变量

grep 'core id' /proc/cpuinfo | sort -u | wc -l #内核数

grep 'processor' /proc/cpuinfo | sort -u | wc -l #线程数
